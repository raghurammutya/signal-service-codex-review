# Simplified Dockerfile for testing
FROM python:3.12-slim

# Install dependencies
RUN apt-get update && apt-get install -y build-essential && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy and install requirements
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code from current directory structure
COPY app/ ./app/
COPY common/ ./common/

# Create non-root user
RUN groupadd -r signalservice && useradd -r -g signalservice -u 1001 signalservice
RUN chown -R signalservice:signalservice /app
USER signalservice

# Expose port and run
EXPOSE 8003
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8003"]