# Dockerfile for Signal Service Orchestrator
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional requirements for orchestrator
RUN pip install --no-cache-dir \
    docker==6.1.3 \
    aioredis==2.0.1

# Copy orchestrator code (test stub only)
COPY test/stubs/docker_orchestrator.py /app/

# Set Python path
ENV PYTHONPATH=/app

# Run orchestrator
CMD ["python", "docker_orchestrator.py"]
