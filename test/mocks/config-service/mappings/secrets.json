{
  "mappings": [
    {
      "request": {
        "method": "GET",
        "urlPathPattern": "/api/v1/secrets/.*/value",
        "queryParameters": {
          "environment": {
            "equalTo": "test"
          }
        }
      },
      "response": {
        "status": 200,
        "jsonBody": {
          "secret_value": "{{request.pathSegments.[3]}}_test_value"
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "request": {
        "method": "GET",
        "urlPath": "/api/v1/secrets/DATABASE_URL/value"
      },
      "response": {
        "status": 200,
        "jsonBody": {
          "secret_value": "postgresql://test_user:test_password@test-timescaledb:5432/signal_service_test"
        }
      }
    },
    {
      "request": {
        "method": "GET",
        "urlPath": "/api/v1/secrets/REDIS_URL/value"
      },
      "response": {
        "status": 200,
        "jsonBody": {
          "secret_value": "redis://test-redis:6379"
        }
      }
    },
    {
      "request": {
        "method": "GET",
        "urlPath": "/api/v1/secrets/GATEWAY_SECRET/value"
      },
      "response": {
        "status": 200,
        "jsonBody": {
          "secret_value": "test_gateway_secret_12345"
        }
      }
    },
    {
      "request": {
        "method": "GET",
        "urlPath": "/api/v1/secrets/INTERNAL_API_KEY/value"
      },
      "response": {
        "status": 200,
        "jsonBody": {
          "secret_value": "test_internal_api_key_67890"
        }
      }
    }
  ]
}